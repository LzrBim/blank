<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="author" content="Third Perspective Web Design, Hamptons NY">

{% block head %}

	<title>{{title}} - Admin</title>
  
{% endblock %}

<link href="/css/bootstrap.min.css" rel="stylesheet" />
<link href="/css/font-awesome.min.css" rel="stylesheet" />
<link href="/admin_css/metisMenu.min.css" rel="stylesheet" />
<link href="/admin_css/theme.css" rel="stylesheet" />
<link href="/admin_css/index_table.css" rel="stylesheet" />
<link href="/admin_css/style.css" rel="stylesheet" />

</head>

<body>

<div id="wrapper">

	<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
	
  	<div class="navbar-header">
			
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
			</button>
      
			<a class="navbar-brand" href="index.html">Admin</a>
		
    </div><!-- /.navbar-header -->
    
    <ul class="crumbs">
    
    	<li>1</li>
      <li>2</li>
      
      
		</ul>

		<ul class="nav navbar-top-links navbar-right">
    
    	{% include 'admin/partial/nav_history.twig' %}
      
      {% include 'admin/partial/nav_user.twig' %}
      
		</ul>
    
    {% include 'admin/partial/nav.twig' %}

	</nav>

	<div id="page-wrapper">

    <div class="row">
      
      <div class="col-sm-6">
  
        <h1>{{title}}</h1>
        <h2>{{subTitle}}</h2>
    
      </div>
      
      <div class="col-sm-6 mainButton">
      
        {% block mainButton %}{% endblock %}
        
      </div>
      
    </div><!-- /.row -->
		
		{% for type, messages in flash %}

			{% for message in messages %}
			
				{%if type == 'error'%} {% set type = 'danger' %} {%endif%}
				
				<div class="alert alert-{{ type }}">
			
					{{ message|raw }}
			
				</div>
			
			{% endfor %}
				
		{% endfor %}
  
    {% block content %}{% endblock %}

	</div><!-- /#page-wrapper -->

</div><!-- /#wrapper -->

<script src="/js/plugins/jquery-2.1.4.min.js" type="text/javascript"></script>
<script src="/js/plugins/bootstrap.min.js" type="text/javascript"></script>
<script src="//tinymce.cachefly.net/4.2/tinymce.min.js"></script>  

{% if ENVIRONMENT == 'local' %}

	<!-- PLUGINS -->
	<script src="/admin_js/plugins/metisMenu.min.js" type="text/javascript"></script>
  <script src="/admin_js/plugins/jquery.validate.min.js" type="text/javascript"></script>
  
  <!-- COMPILED -->
  <script src="/admin_js/main.js" type="text/javascript"></script> 
  <script src="/admin_js/admin_common.js" type="text/javascript"></script> 
  <script src="/admin_js/dashboard.js" type="text/javascript"></script> 
  <script src="/admin_js/faq.js" type="text/javascript"></script> 
  <script src="/admin_js/image.js" type="text/javascript"></script> 
  <script src="/admin_js/menu.js" type="text/javascript"></script> 
  <script src="/admin_js/page.js" type="text/javascript"></script> 
  <script src="/admin_js/user.js" type="text/javascript"></script> 
	 
  
{% else %}


{% endif %}
  

<script>
$(function() {

	var options = {{ jsOptions|json_encode()|raw }};

	tpjc.init('{{ jsPage }}', options);

});
</script>

</body>
</html>